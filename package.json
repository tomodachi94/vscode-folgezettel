{
  "name": "vscode-folgezettel",
  "displayName": "vscode-folgezettel",
  "publisher": "tomodachi94",
  "description": "Provides a small set of filename-based commands for creating and navigating folgezettel-style notes in a zettelkasten",
  "repository": {
    "type": "git",
    "url": "https://github.com/tomodachi94/vscode-folgezettel"
  },
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "zettelkasten",
    "note-taking",
    "Foam"
  ],
  "main": "./dist/extension.js",
  "browser": "./dist/web/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-folgezettel.newTrainOfThought",
        "title": "New Train of Thought",
        "category": "Folgezettel"
      },
      {
        "command": "vscode-folgezettel.newSiblingThought",
        "title": "New Sibling Thought",
        "category": "Folgezettel",
        "when": "editorLangId == markdown"
      },
      {
        "command": "vscode-folgezettel.newChildThought",
        "title": "New Child Thought",
        "category": "Folgezettel",
        "when": "editorLangId == markdown"
      },
      {
        "command": "vscode-folgezettel.goToParentThought",
        "title": "Go To Parent Thought",
        "category": "Folgezettel",
        "when": "editorLangId == markdown"
      }
    ]
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": false,
      "description": "This extension is disabled in Untrusted Workspaces because all of its operations involve parsing filenames, which could be dangerous with untrusted input."
    }
  },
  "scripts": {
    "build": "vsce package -o vscode-folgezettel.vsix",
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js test-workspace",
    "pretest": "npm run compile-web",
    "release": "release-it",
    "release:vsix": "npm run build && release:vsix:publish-marketplace -i vscode-folgezettel.vsix && npm run release:vsix:publish-openvsx -i vscode-folgezettel.vsix",
    "release:vsix:publish-marketplace": "npm exec -- vsce publish",
    "release:vsix:publish-openvsx": "npm exec -- ovsx publish",
    "vscode:prepublish": "npm run package-web",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src && prettier . --check && npm audit",
    "lint:fix": "eslint src --fix && prettier . --write && npm audit fix",
    "ci:run": "npm ci && npm run lint && xvfb-run -a npm run test",
    "run-in-browser": "vscode-test-web --browserType=none --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@release-it/keep-a-changelog": "^7.0.0",
    "@types/assert": "^1.5.11",
    "@types/mocha": "^10.0.10",
    "@types/vscode": "^1.104.0",
    "@types/webpack-env": "^1.18.8",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vscode/test-web": "^0.0.74",
    "@vscode/vsce": "^3.6.2",
    "assert": "^2.1.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "mocha": "^11.7.5",
    "ovsx": "*",
    "prettier": "^3.6.2",
    "process": "^0.11.10",
    "release-it": "^19.0.5",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1"
  }
}
